

import lejos.hardware.Button;
import lejos.hardware.Key;
import lejos.hardware.ev3.LocalEV3;
import lejos.hardware.lcd.TextLCD;
import lejos.hardware.motor.EV3LargeRegulatedMotor;

public class AutonomousRobot {
	
	public static TextLCD t = LocalEV3.get().getTextLCD();	
	
	public static void main(String[] args){
		UltrasonicPoller usPoller = new UltrasonicPoller();
		float currentDistance = usPoller.getFilteredData();
		while(true){
			currentDistance = usPoller.getFilteredData();
			t.drawString("Distance: " + currentDistance, 0, 0);

			t.clear();
			
		}
	}
	
	
}
